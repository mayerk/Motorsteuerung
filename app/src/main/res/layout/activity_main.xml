<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/ActivityBackgroundColor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_act_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Motorsteuerung"
        android:background="@color/ActivityHeadingColor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_act_toolbar"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tmp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vor-/ZurÃ¼ck"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/main_act_button_backward"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_below="@id/tmp_text"
            android:background="@color/ActivityHeadingColor"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_backward"
                android:tint="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_below="@id/tmp_text"
            android:background="@color/ActivityHeadingColor"
            android:layout_marginTop="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp">

            <ImageView
                android:id="@+id/main_act_button_forward"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_forward"
                android:tint="@color/white"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>